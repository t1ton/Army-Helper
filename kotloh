dwAddress := dwSAMP + 0x12D8F8
chatInput := readString(hGTA, dwAddress, 256)
if (RegExMatch(chatInput, "^\/rt (.*)", rttext)) {
If ( rttext1 == " " ) or ( rttext1 == "" )
{
return
}
else
{
SendChat("/r " rtag " " rttext1 "")
}
}
if (RegExMatch(chatInput, "^\/ft (.*)", fttext)) {
If ( fttext1 == " " ) or ( fttext1 == "" )
{
return
}
else
{
SendChat("/f " ftag " " fttext1 "")
}
}
if (RegExMatch(chatInput, "^\/rn (.*)", rntext)) {
If ( rntext1 == " " ) or ( rntext1 == "" )
{
return
}
else
{
SendChat("/r (( " rntext1 " ))")
}
}
if (RegExMatch(chatInput, "^\/fn (.*)", fntext)) {
If ( fntext1 == " " ) or ( fntext1 == "" )
{
return
}
else
{
SendChat("/f (( " fntext1 " ))")
}
}
}
return


